{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "formatter": {
        "indentStyle": "space"
    },
    "files": {
        "include": ["**/*.ts", "**/*.tsx", "**/*.json", "**/*.js", "**/*.jsx", "**/*.md"],
        "ignore": ["apps/**", "packages/**", "dist/**", "node_modules/**", "coverage/**"]
    }
}
