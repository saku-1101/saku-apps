{
    "name": "blog",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "test:unit": "jest --config jest.config.ts",
        "test:update": "jest --config jest.config.ts --updateSnapshot",
        "test:watch": "jest --config jest.config.ts --watchAll",
        "test:debug": "jest --config jest.config.ts --runInBand",
        "test": "bun run test:unit",
        "check:format": "bunx biome format --changed --write .",
        "check:lint": "bunx biome lint --changed --apply .",
        "check:typecheck": "tsc --noEmit",
        "check:lint-format": "bunx biome check --changed --apply .",
        "check:markuplint": "markuplint \"./app/**/*.{jsx,tsx}\"",
        "check": "bun check:typecheck & bunx biome check --apply . --no-errors-on-unmatched & bun check:markuplint",
        "setup": "./bin/setup.sh"
    },
    "dependencies": {
        "@repo/ui": "*",
        "@vercel/speed-insights": "^1.0.9",
        "gray-matter": "^4.0.3",
        "isomorphic-dompurify": "^2.3.0",
        "next": "^14.0.4",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "remark": "^15.0.1",
        "remark-html": "^16.0.1"
    },
    "devDependencies": {
        "@graphql-typed-document-node/core": "^3.2.0",
        "@markuplint/jsx-parser": "^4.1.0",
        "@markuplint/react-spec": "^4.0.1",
        "@next/eslint-plugin-next": "^14.0.4",
        "@repo/tailwind-config": "*",
        "@repo/typescript-config": "*",
        "@types/node": "^20.10.6",
        "@types/react": "^18.2.46",
        "@types/react-dom": "^18.2.18",
        "autoprefixer": "^10.4.17",
        "markuplint": "^4.1.0",
        "postcss": "^8.4.35",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.3.3"
    }
}
