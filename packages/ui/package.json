{
  "name": "@repo/ui",
  "version": "0.0.0",
  "private": true,
  "sideEffects": ["**/*.css"],
  "main": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./ui.css": "./dist/index.css"
  },
  "scripts": {
    "build": "tailwindcss -i ./src/styles.css -o dist/index.css",
    "dev": "tailwindcss -i ./src/styles.css -o ./dist/index.css --watch",
    "check:format": "bunx biome format --changed --write .",
    "check:lint": "bunx biome lint --changed --apply .",
    "check:typecheck": "tsc --noEmit",
    "check:lint-format": "bunx biome check --changed --apply .",
    "check": "bun run check:typecheck & bunx biome check --apply . --no-errors-on-unmatched",
    "storybook": "storybook dev -p 6006 $VITE_STORYBOOK=true",
    "build:storybook": "storybook build -o ./storybook-static",
    "gen": "turbo gen react-component",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@repo/tailwind-config": "*",
    "@repo/typescript-config": "*",
    "@storybook/addon-essentials": "8.1.9",
    "@storybook/addon-interactions": "8.1.9",
    "@storybook/addon-links": "8.1.9",
    "@storybook/addon-mdx-gfm": "8.1.9",
    "@storybook/addon-onboarding": "1.0.11",
    "@storybook/blocks": "8.1.9",
    "@storybook/react": "8.1.9",
    "@storybook/react-vite": "8.1.9",
    "@storybook/test": "8.1.9",
    "@turbo/gen": "1.13.4",
    "@types/node": "20.14.2",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "storybook": "8.1.9",
    "typescript": "5.4.5"
  },
  "dependencies": {
    "class-variance-authority": "0.7.0",
    "clsx": "2.1.0"
  }
}
