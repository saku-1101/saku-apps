{
    "name": "@repo/ui",
    "version": "0.0.0",
    "private": true,
    "exports": {
        ".": "./src/index.ts"
    },
    "scripts": {
        "test:unit": "jest --config jest.config.ts",
        "test:update": "jest --config jest.config.ts --updateSnapshot",
        "test:watch": "jest --config jest.config.ts --watchAll",
        "test:debug": "jest --config jest.config.ts --runInBand",
        "test": "bun run test:unit",
        "check:format": "bunx biome format --write .",
        "check:lint": "bunx biome lint .",
        "check:typecheck": "tsc --noEmit",
        "check:lint-format": "bunx biome check .",
        "check": "bun run check:typecheck & bunx biome check .",
        "ui:gen": "npx hygen ui new",
        "cmp:gen": "npx hygen cmp new",
        "storybook": "storybook dev -p 6006",
        "build:storybook": "storybook build",
        "gen": "turbo gen react-component",
        "build-storybook": "storybook build"
    },
    "devDependencies": {
        "@biomejs/biome": "1.5.3",
        "@repo/biome-config": "*",
        "@repo/typescript-config": "*",
        "@storybook/addon-essentials": "^8.0.0-beta.2",
        "@storybook/addon-interactions": "^8.0.0-beta.2",
        "@storybook/addon-links": "^8.0.0-beta.2",
        "@storybook/addon-mdx-gfm": "^8.0.0-beta.2",
        "@storybook/addon-onboarding": "^1.0.11",
        "@storybook/blocks": "^8.0.0-beta.2",
        "@storybook/react": "^8.0.0-beta.2",
        "@storybook/react-vite": "^8.0.0-beta.2",
        "@storybook/test": "^8.0.0-beta.2",
        "@turbo/gen": "^1.11.3",
        "@types/node": "^20.10.6",
        "@types/react": "^18.2.46",
        "@types/react-dom": "^18.2.18",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "storybook": "^8.0.0-beta.2",
        "typescript": "^5.3.3"
    }
}
