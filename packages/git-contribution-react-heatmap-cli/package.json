{
  "name": "git-contribution-react-heatmap-cli",
  "module": "src/index.ts",
  "type": "module",
  "bin": {
    "ghm": "dist/index.js"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "clean": "rimraf dist && rimraf .turbo",
    "check:format": "bunx biome format --changed --write .",
    "check:lint": "bunx biome lint --changed --apply .",
    "check:typecheck": "tsc --noEmit",
    "check:lint-format": "bunx biome check --changed --apply .",
    "check": "bun run check:typecheck & bunx biome check --apply . --no-errors-on-unmatched"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "tsup": "^8.1.0",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "rimraf": "^5.0.7",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "ora": "^8.0.1",
    "zod": "^3.23.8"
  }
}
